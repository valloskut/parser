= form_for @restaurant do |f|
  -if @restaurant.errors.any?
    #error_explanation
      %h2= "#{pluralize(@restaurant.errors.count, "error")} prohibited this restaurant from being saved:"
      %ul
        - @restaurant.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :zip
    = f.text_field :zip
  .field
    = f.label :address
    = f.text_area :address
  .field
    = f.label :reviewer_name
    = f.text_field :reviewer_name
  .field
    = f.label :reviewer_location
    = f.text_field :reviewer_location
  .field
    = f.label :rating
    = f.number_field :rating
  .actions
    = f.submit 'Save'
