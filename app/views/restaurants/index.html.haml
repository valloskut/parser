%h1 Listing restaurants
= paginate @restaurants
%table
  %tr
    %th Name
    %th Zip
    %th Address
    %th Reviewer name
    %th Reviewer location
    %th Rating
    %th
    %th
    %th

  - @restaurants.each do |restaurant|
    %tr
      %td= restaurant.name.encode!('UTF-8', 'UTF-8', :invalid => :replace)
      %td= restaurant.zip
      %td= restaurant.address
      %td= restaurant.reviewer_name
      %td= restaurant.reviewer_location
      %td= restaurant.rating
      %td= link_to 'Show', restaurant
      %td= link_to 'Edit', edit_restaurant_path(restaurant)
      %td= link_to 'Destroy', restaurant, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Restaurant', new_restaurant_path
